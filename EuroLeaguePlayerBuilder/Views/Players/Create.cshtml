@using Microsoft.AspNetCore.Mvc.Rendering
@using EuroLeaguePlayerBuilder.ViewModels.Players
@using EuroLeaguePlayerBuilder.Data.Enums
@model PlayerInputModel

@{
    ViewData["Title"] = "Create Player";
}

<div class="container mt-5">

    <h2 class="text-orange mb-4">Create New Player</h2>

    <form asp-action="Create" method="post" class="bg-dark p-4 rounded shadow">

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row">

            <div class="col-md-6 mb-3">
                <label asp-for="FirstName" class="form-label text-white"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="LastName" class="form-label text-white"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Position" class="form-label text-white"></label>
                <select asp-for="Position"
                        class="form-select"
                        asp-items="Html.GetEnumSelectList<Position>()">
                </select>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="TeamId" class="form-label text-white"></label>
                <select asp-for="TeamId"
                        class="form-select"
                        asp-items="@(new SelectList(Model.Teams, "Id", "Name"))">
                    <option value="">-- Select Team --</option>
                </select>
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="PointsPerGame" class="form-label text-white"></label>
                <input asp-for="PointsPerGame" class="form-control" />
                <span asp-validation-for="PointsPerGame" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="ReboundsPerGame" class="form-label text-white"></label>
                <input asp-for="ReboundsPerGame" class="form-control" />
                <span asp-validation-for="ReboundsPerGame" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="AssistsPerGame" class="form-label text-white"></label>
                <input asp-for="AssistsPerGame" class="form-control" />
                <span asp-validation-for="AssistsPerGame" class="text-danger"></span>
            </div>

        </div>

        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-warning text-dark fw-bold">
                Create Player
            </button>

            <a asp-action="Index" class="btn btn-outline-light">
                Cancel
            </a>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #1e1e1e;
    }

    .text-orange {
        color: darkorange !important;
    }

    table th,
    table td {
        vertical-align: middle;
    }

    .btn-warning {
        font-weight: bold;
    }
</style>

