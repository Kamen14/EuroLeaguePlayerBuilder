@using EuroLeaguePlayerBuilder.ViewModels.Players
@model IEnumerable<PlayerViewModel>

@{
    ViewData["Title"] = "Players";
}

<div class="container mt-5">

    <!-- Page header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white text-orange">All Players</h2>

        <a asp-action="Create"
           class="btn btn-warning text-dark fw-semibold">
            + Add Player
        </a>
    </div>

    <!-- Search bar -->
    <form asp-action="Search" method="get" class="mb-4">
        <div class="input-group">
            <input type="text"
                   name="name"
                   value="@Context.Request.Query["search"]"
                   class="form-control"
                   placeholder="Search players by name" />

            <button class="btn btn-warning text-dark fw-semibold" type="submit">
                 Search
            </button>
        </div>
    </form>

    <!-- Divider -->
    <hr class="border-secondary" />

    <!-- Players list -->
    <div class="bg-dark p-4 rounded shadow">

        @if (!Model.Any())
        {
            <div class="text-center text-secondary fs-5 py-4">
                No players found with that name.
            </div>
        }
        else
        {
            <partial name="_PlayerPartial" model="Model" />
        }

    </div>

</div>

