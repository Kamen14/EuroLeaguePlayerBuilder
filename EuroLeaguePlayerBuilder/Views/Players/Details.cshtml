@using EuroLeaguePlayerBuilder.ViewModels.Players
@model PlayerDetailsViewModel

@{
    var playersIndexUrl = Url.Action("Index", "Players");
}

<div class="container mt-5">

    <h2 class="text-orange mb-4">
        @Model.FirstName @Model.LastName
    </h2>

    <table class="table table-dark table-striped">
        <tbody>
            <tr>
                <th>Position</th>
                <td>@Model.Position</td>
            </tr>

            <tr>
                <th>Points Per Game</th>
                <td>@Model.PointsPerGame</td>
            </tr>

            <tr>
                <th>Rebounds Per Game</th>
                <td>@Model.ReboundsPerGame</td>
            </tr>

            <tr>
                <th>Assists Per Game</th>
                <td>@Model.AssistsPerGame</td>
            </tr>

            <tr>
                <th>Team</th>
                <td>
                    <a asp-controller="Teams"
                       asp-action="Details"
                       asp-route-id="@Model.TeamId"
                       class="text-orange text-decoration-none fw-bold">
                        @Model.TeamName
                    </a>
                </td>
            </tr>
        </tbody>
    </table>

    <div class="mt-4">
        <a href="@playersIndexUrl"
           class="btn btn-outline-light"
           onclick="if (document.referrer) { history.back(); } else { window.location='@playersIndexUrl'; } return false;">
            Back
        </a>
    </div>
</div>

