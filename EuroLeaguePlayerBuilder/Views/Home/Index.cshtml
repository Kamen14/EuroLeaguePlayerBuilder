@using EuroLeaguePlayerBuilder.ViewModels.Home
@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<HomePageTeamViewModel>

    <div class="container text-center py-5">
        <h1 class="display-4 mb-4" style="color: darkorange;">
            Welcome to EuroleaguePlayerBuilder!
        </h1>

        <p class="lead text-white mb-5">
            Explore your favorite EuroLeague teams and build your player.
        </p>

        <div class="row justify-content-center g-4">
            @foreach (var team in Model)
            {
                <div class="col-6 col-md-2">
                    <a asp-controller="Teams"
                       asp-action="Details"
                       asp-route-id="@team.Id"
                       class="text-decoration-none">

                        <div class="card border-0 bg-dark shadow-sm h-100">
                            <img src="@team.LogoPath"
                                class="card-img-top img-fluid p-2 team-logo"
                                alt="@team.Name Logo">

                            <div class="card-body p-2">
                                <h6 class="card-title text-white">
                                    @team.Name
                                </h6>
                            </div>
                        </div>

                    </a>
                </div>
            }
        </div>

        <!-- Register/Login Buttons (Only if not authenticated) -->
        @if (User.Identity?.IsAuthenticated == false)
        {
            <div class="d-flex justify-content-center gap-3 mt-4">
                <a asp-area="Identity"
                   asp-page="/Account/Register"
                   class="btn btn-outline-light px-4">
                    Register
                </a>

                <a asp-area="Identity"
                   asp-page="/Account/Login"
                   class="btn btn-outline-light px-4">
                    Login
                </a>
            </div>
        }

    </div>

    <style>
        body {
            background-color: #1e1e1e;
        }

       .team-logo {
            height: 120px; /* same height for all logos */
            object-fit: contain; /* keeps aspect ratio */
       }

       .card {
            min-height: 200px;
       }

        .card:hover {
            transform: scale(1.03);
            transition: transform 0.2s ease-in-out;
        }
    </style>
