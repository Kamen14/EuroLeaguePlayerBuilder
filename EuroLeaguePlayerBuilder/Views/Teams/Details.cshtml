@using EuroLeaguePlayerBuilder.ViewModels.Teams
@model TeamDetailsViewModel

@{
    ViewData["Title"] = "Team Details";
}

<div class="container py-5">
    <div class="row g-4 align-items-start">
        <!-- Team Logo -->
        <div class="col-12 col-md-3 text-center">
            <img src="@Model.LogoPath"
                 alt="@Model.Name Logo"
                 class="img-fluid mb-3"
                 style="max-height:150px; object-fit:contain;">
            <h2 class="text-orange">@Model.Name</h2>
        </div>
        
        <!-- Coach and Players -->
        <div class="col-12 col-md-9">
            <!-- Coach Table -->
            <h3 class="text-white mb-3">Coach</h3>
            @if (Model.Coach != null)
            {
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Titles Won</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Coach.FirstName</td>
                            <td>@Model.Coach.LastName</td>
                            <td>@Model.Coach.TitlesWon</td>
                        </tr>
                    </tbody>
                </table>
            }

            <!-- Players Table -->
            <h3 class="text-white mt-5 mb-3">Roster</h3>
            @if (Model.Players != null && Model.Players.Any())
            {
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Position</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var player in Model.Players)
                        {
                            <tr>
                                <td>@player.FirstName</td>
                                <td>@player.LastName</td>
                                <td>@player.Position</td>
                                <td>
                                    <a asp-controller="Player" asp-action="Details" asp-route-id="@player.Id"
                                       class="btn btn-sm btn-warning text-dark">
                                        View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

<style>
    body {
        background-color: #1e1e1e;
    }

    .text-orange {
        color: darkorange !important;
    }

    table th,
    table td {
        vertical-align: middle;
    }

    .btn-warning {
        font-weight: bold;
    }
</style>