@using EuroLeaguePlayerBuilder.ViewModels.Players
@model IEnumerable<PlayerViewModel>

<h3 class="text-white mt-5 mb-3">Roster</h3>
@if (Model != null && Model.Any())
{
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Position</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var player in Model)
            {
                <tr>
                    <td>@player.FirstName</td>
                    <td>@player.LastName</td>
                    <td>@player.Position</td>
                    <td>
                        <!-- View button -->
                        <a asp-controller="Players"
                           asp-action="Details"
                           asp-route-id="@player.Id"
                           class="btn btn-sm btn-warning text-dark me-1">
                            View
                        </a>

                        <!-- Edit button -->
                        <a asp-controller="Players"
                           asp-action="Edit"
                           asp-route-id="@player.Id"
                           class="btn btn-sm btn-info text-dark me-1">
                            Edit
                        </a>

                        <!-- Delete button -->
                        <form asp-controller="Players"
                              asp-action="Delete"
                              asp-route-id="@player.Id"
                              method="post"
                              class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
